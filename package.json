{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "preview": "vite preview",
        "watch": "vite build --watch",
        "build:css": "tailwindcss -i ./resources/css/app.css -o ./public/css/app.css --minify",
        "build:js": "vite build --config vite.config.js",
        "build:assets": "npm run build:css && npm run build:js",
        "build:all": "npm run build:assets",
        "dev:all": "concurrently \"npm run dev\" \"npm run watch\"",
        "dev:css": "tailwindcss -i ./resources/css/app.css -o ./public/css/app.css --watch",
        "dev:js": "vite --config vite.config.js",
        "dev:assets": "npm run dev:css && npm run dev:js",
        "dev:all:css": "concurrently \"npm run dev:css\" \"npm run dev:js\"",
        "dev:all:js": "concurrently \"npm run dev\" \"npm run dev:js\"",
        "dev:all:assets": "concurrently \"npm run dev\" \"npm run dev:css\" \"npm run dev:js\"",
        "dev:all:assets:css": "concurrently \"npm run dev\" \"npm run dev:css\" \"npm run dev:js\""
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "@tailwindcss/vite": "^4.0.0",
        "autoprefixer": "^10.4.16",
        "axios": "^1.8.2",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^1.2.0",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.4.0",
        "vite": "^6.2.4"
    },
    "dependencies": {
        "flowbite": "^3.1.2"
    }
}
